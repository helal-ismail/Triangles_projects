<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/parent" >

    <FrameLayout
        android:id="@+id/img_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/tool_box" >

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <Button
        android:id="@+id/show_hide"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/img_frame"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@drawable/up" >
    </Button>

    <RelativeLayout
        android:id="@+id/tool_box"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/btn_group1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="15dp" >

            <CheckBox
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="دراسة وإفادة"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="متـــــــــــــــــابعة"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="حفــــــــــــــــــــــظ"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/btn_group1"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="15dp" >

            <CheckBox
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="التنبيه باللازم"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="إتخـــــــاذ اللازم"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="للعـــــــــــــــــرض"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:orientation="vertical"
            android:padding="15dp" >

            <Button
                android:id="@+id/add_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="إضافة وحدات"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ta2shera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="تأشيرة السيد القائد"
                android:textColor="#ff0000"
                android:textSize="25sp"
                android:textStyle="bold" />

            
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>