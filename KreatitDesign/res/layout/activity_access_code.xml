<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        layout="@layout/subheader_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginRight="@dimen/dim_20"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dim_50"
                    android:layout_marginRight="@dimen/dim_50"
                    android:layout_marginTop="-20dp"
                    android:src="@drawable/bind_logo" />

                <LinearLayout
                    android:id="@+id/btn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:layout_marginRight="@dimen/dim_10"
                    android:layout_marginTop="-20dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/access_code"
                        android:ellipsize="end"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:tag="bold"
                        android:text="Access Code"
                        android:textColor="@color/dark_blue"
                        android:textSize="@dimen/tex_size_small"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:layout_marginRight="@dimen/dim_10"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:lines="1"
                        android:tag="bold"
                        android:text="Access Code : "
                        android:textColor="@color/gray_35"
                        android:textSize="@dimen/tex_size_normal"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/access_view"
                        style="@style/Button_Blue"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="View"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/access_update"
                        style="@style/Button_Red"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="Update"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:layout_marginRight="@dimen/dim_10"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:lines="1"
                        android:tag="bold"
                        android:text="User Name : "
                        android:textColor="@color/gray_35"
                        android:textSize="@dimen/tex_size_normal"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/name_view"
                        style="@style/Button_Blue"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="View"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/name_update"
                        style="@style/Button_Red"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="Update"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_10"
                    android:layout_marginRight="@dimen/dim_10"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_margin="5dp"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:lines="1"
                        android:tag="bold"
                        android:text="User Pass : "
                        android:textColor="@color/gray_35"
                        android:textSize="@dimen/tex_size_normal"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/pass_view"
                        style="@style/Button_Blue"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="View"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/pass_update"
                        style="@style/Button_Red"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="Update"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/progress_bar_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_40"
                android:layout_marginRight="@dimen/dim_40"
                android:orientation="vertical" >

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</LinearLayout>