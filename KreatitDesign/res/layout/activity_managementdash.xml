                    <LinearLayout
                        android:id="@+id/btn"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
